<div class="columns">
<div class="column is-one-quarter"></div>
<div class='column is-one-half'>
<div class="box">
<%= form_for @idea do |f| %>
<div class="field">
  <%= f.label :title, class: 'label' %>
  <div class='control'>
    <%= f.text_field :title, class: 'input'%>
  </div>
</div>
<div class="field">
  <%= f.label :description, class: 'label' %>
  <div class='control'>
    <%= f.text_field :description, class: 'textarea'%>
  </div>
</div>
<div class="field">

  <div class='control'>
    <%= f.submit  class: 'button is-link is-outlined'%>
  </div>
</div>
<% end %>
</div>
</div>
<div class="column is-one-quarter"></div>
</div>
