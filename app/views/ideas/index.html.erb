<h1 class="title">Index</h1>
<div class="container">

</div>
<div class="modal">
  <div class="modal-background"></div>
  <div class="modal-content">
    <div class="box">
    <%= form_for @idea do |f| %>
    <div class="field">
      <%=  f.label :title, class: 'label' %>
      <div class='control'>
        <%= f.text_field :title, class: 'input'%>
      </div>
    </div>
    <div class="field">
      <%= f.label :description, class: 'label' %>
      <div class='control'>
        <%= f.text_field :description, class: 'textarea'%>
      </div>
    </div>
    <div class="field">

      <div class='control'>
        <%= f.submit  class: 'button is-link is-outlined'%>
      </div>
    </div>
    <% end %>
  </div>
  </div>
  <button class="modal-close is-large" aria-label="close"></button>
</div>
<div class='container'>
  <div class="level">
    <div class="level-left"></div>
    <div class='level-right'>

      <a class='button is-link is-outlined level-item' id="new-idea">New Idea</a>

    </div>
  </div>
<% @ideas.each do |i| %>
<div class="box">
  <h5 class="title is-5">
  <%= link_to i.title, idea_path(i)  %>
</h5>
<p>
    <%= i.description %>
  </p>

</div>
<% end %>
</div>
