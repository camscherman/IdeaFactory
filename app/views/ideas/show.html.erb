<section class="hero">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">
        <%= @idea.title %>
      </h1>

    </div>
  </div>
</section>
<div class="container">
    <div class='content'>
      <p>
        <%= @idea.description %>
      </p>
    </div>

  <div class="level">
    <div class="level-left">
      <%= link_to 'Edit Content', edit_idea_path, class: 'button is-outlined is-dark' %>
    </div>
    <div class="level-right">
      <%= link_to 'Delete Post', idea_path(@idea), method: :delete, class: 'button is-outlined is-danger' %>
    </div>
  </div>
</div>
</section>
