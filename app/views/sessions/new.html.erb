<div class='container'>
<div class="columns">
<div class="column is-one-quarter"></div>
<div class='column is-one-half'>
<div class="box">
<%= form_for :session, url: session_path do |f| %>

<div class="field">
  <%= f.label :email, class: 'label' %>
  <div class='control'>
    <%= f.email_field :email, class: 'input'%>
  </div>
</div>
<div class="field">
  <%= f.label :password, class: 'label' %>
  <div class='control'>
    <%= f.password_field :password, class: 'input'%>
  </div>
</div>


<div class="field">

  <div class='control'>
    <%= f.submit "Sign In" ,  class: 'button is-link is-outlined'%>
  </div>
</div>
<% end %>
</div>
</div>
<div class="column is-one-quarter"></div>
</div>
</div>
